<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h1 class="mt-4 mb-4 text-center text-primary"></h1>

        <span id="message"></span>
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col col-sm-9">Sample Data</div>
                    <div class="col col-sm-3">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <button class="button add-button"> Add </button>
                    <table class="table table-striped table-bordered" id="sample_data">
                        <thead>
                            <tr>
                                
                                <th>Animal Class</th>
                                <th>Animal Species</th>
                                <th>Animal Name</th>
                                <th>Birth Date</th>
                                <th>Arrival Date</th>
                                <th>Sex</th>
                                <th>Enclosure</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(function(row) { %>
                                <tr>
                                    
                                    <td><%= row.class %></td>
                                    <td><%= row.species %></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.birthdate %></td>
                                    <td><%= row.arrivaldate %></td>
                                    <td><%= row.sex %></td>
                                    <td><%= row.enclosureid %></td>
                                    <td>
                                        <button class="button edit-button"> Edit </button>
                                        <button class="button delete-button" > Delete </button>

                                        <dialog class="modal" id="edit-modal">
                                            <form action="/mod_animal/edit" method="post"> 
                                                <!--? to relay id to server, hidden  -->
                                                <input type="hidden" name="id_edit" value="<%= row.animalid %>"> 

                                                <input type="text" name="editclass" value= "<%= row.class %>" >
                                                <input type="text" name="editspecies" value="<%= row.species %>">
                                                <input type="text" name="editname" value="<%= row.name %>">
                                                <input type="text" name="editbirth" value="<%= row.birthdate %>">
                                                <input type="text" name="editarrival" value="<%= row.arrivaldate %>">
                                                <input type="text" name="editsex" value="<%= row.sex %>">
                                                <input type="text" name="editenclosure" value="<%= row.enclosureid %>">
                                    
                                                <button type="submit">Edit</button>
                                            </form>
                                        </dialog>

                                        <dialog class="modal" id="delete-modal">
                                            <form action="/mod_animal/delete" method="post"> 
                                                <!--? to relay id to server, hidden  -->
                                                <input type="hidden" name="id_delete" value="<%= row.animalid %>"> 

                                                <input type="text" name="deleteclass" value= "<%= row.class %>" readonly>
                                                <input type="text" name="deletespecies" value="<%= row.species %>" readonly>
                                                <input type="text" name="deletename" value="<%= row.name %>" readonly>
                                                <input type="text" name="deletebirth" value="<%= row.birthdate %>" readonly>
                                                <input type="text" name="deletearrival" value="<%= row.arrivaldate %>" readonly>
                                                <input type="text" name="deletesex" value="<%= row.sex %>" readonly>
                                                <input type="text" name="deleteenclosure" value="<%= row.enclosureid %>" readonly>
                                    
                                                <button type="submit">Delete</button>
                                            </form>
                                        </dialog>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </div>

    <!--! add modal starts here -->
    <dialog class="modal" id="add-modal">
        <form action="/mod_animal/add" method="post"> 
            <div class="field input-field">
                <input id="class_animal" type="text" placeholder="Class" name ="addclass" class="input" required><br />
            </div>
            <div class="field input-field">
                <input id="species_animal" type="text" placeholder="Species" name="addspecies" class="input" required><br />
            </div>
            <div class="field input-field">
                <input id="name_animal" type="text" placeholder="Name" name="addname" class="input" required><br />
            </div>
            <div class="field input-field">
                <input id="birthdate_animal" type="date" placeholder="Birthdate" name="addbirthdate" class="input" ><br />
            </div>
            <div class="field input-field">
                <input id="arrival_animal" type="date" placeholder="Arrival Date" name="addarrival" class="input" required><br />
            </div>
            <div class="field input-field">
                <input id="sex_animal" type="text" placeholder="Sex" name="addsex" class="input" required><br />
            </div>
            <div class="field input-field">
                <input id="Enclosure_animal" type="text" placeholder="Enclosure ID" name="addenclosure" class="input" required><br />
            </div>
            <div class="field button-field">
                <button type="submit">Add</button>
            </div>
            <div class="form-link">
                <span><a href="/mod_animal" class="link login-link">View animal</a></span> 
            </div>

            <button type="submit">Delete</button>
        </form>
    </dialog>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // ADD EXIT BUTTON FEATURE IN MODALS
            var exitButton = document.querySelectorAll('.exit-button');

            var addButton = document.querySelector('.add-button');
            var editButtons = document.querySelectorAll('.edit-button');
            var deleteButtons =  document.querySelectorAll('.delete-button');

            var addModal = document.querySelector('#add-modal')
            var editModals = document.querySelectorAll('#edit-modal');
            var deleteModals = document.querySelectorAll('#delete-modal');

            addButton.addEventListener('click', function () {
                addModal.showModal();
            })
            editButtons.forEach(function (button, index) {
                button.addEventListener('click', function () {
                    editModals[index].showModal();
                });
            });
            deleteButtons.forEach(function (button, index) {
                button.addEventListener('click', function () {
                    deleteModals[index].showModal();
                });
            });

            
        });
    </script>

</body>
</html>