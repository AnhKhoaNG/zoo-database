<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
        <div class="container">
            <h1 class="mt-4 mb-4 text-center text-primary"></h1>

            <span id="message"></span>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col col-sm-9">Sample Data</div>
                        <div class="col col-sm-3">
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="sample_data">
                            <thead>
                                <tr>
                                    <th>Arrival ID</th>
                                    <th>Animal Class</th>
                                    <th>Animal Species</th>
                                    <th>Animal Name</th>
                                    <th>Birth Date</th>
                                    <th>Arrival Date</th>
                                    <th>Sex</th>
                                    <th>Enclosure</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(function(row) { %>
                                    <tr>
                                        <td><%= row.animalid %></td>
                                        <td><%= row.class %></td>
                                        <td><%= row.species %></td>
                                        <td><%= row.name %></td>
                                        <td><%= row.birthdate %></td>
                                        <td><%= row.arrivaldate %></td>
                                        <td><%= row.sex %></td>
                                        <td><%= row.enclosureid %></td>
                                        <td>
                                           
                                            <a href="/edit/<%= row.animalid %>">Edit</a>
                                            <a href="/delete/<%= row.animalid %>">Delete</a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>
        </div>
    </form>
</body>
</html>